{% extends "layout.njk" %}

{% block content %}
<div class="container">
  <div class="row mb-2">
      <div class="w-100 mb-2"></div>
      <a class="btn btn-outline-primary" href="/activitiesUser/{{user.id}}" role="button">Dashboard</a>
  </div>
</div>

<div class="container mt-3">
  <form method="POST" action="/activityHeader">
    <input type="hidden" name="activityId" id="activityId" value="{{activity.id}}">
    <div class="form-group">
      <label for="activityTitle">Describe this activity created by {{activity.owner.firstname}}</label>
      <input type="text" class="form-control" name="activityTitle" id="activityTitle" value="{{activity.title}}" placeholder="Your activity name">
    </div>

    <span mt-2>Select your members</span>
    {% for member in activity.members %}
    <div class="form-check mt-2">
      <input class="form-check-input" type="checkbox" name="activityMembersId" value="{{member.id}}" id="activityMember{{member.id}}" checked>
      <label class="form-check-label" for="activityMember{{member.id}}">
        {{member.firstname}}
      </label>
    </div>
    {% endfor %}
    {% for member in usersNoMember %}
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="activityMembersId" value="{{member.id}}" id="activityMember{{member.id}}" >
      <label class="form-check-label" for="activityMember{{member.id}}">
        {{member.firstname}}
      </label>
    </div>
    {% endfor %}

    <button type="submit" class="btn btn-primary mt-2">Save activity</button>
  </form>
</div>
{% endblock %}
